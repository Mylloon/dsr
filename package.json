{
  "name": "dsr",
  "version": "2.2.0",
  "description": "Discord Video Sharing",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rm -rf ./dist 2> /dev/null; npx tsc",
    "start": "npm run build && electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "test": "node --import tsx --test **/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://git.mylloon.fr/Anri/dsr"
  },
  "keywords": [
    "discord"
  ],
  "author": "Mylloon",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "ffmpeg-static": "^5.3",
    "ffprobe-static": "^3.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11",
    "@electron-forge/maker-zip": "^7.11",
    "@types/ffprobe-static": "^2.0",
    "electron": "^40.2",
    "tsx": "^4.21",
    "typescript": "^5.9"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./image/icon.ico",
        "asar": {
          "unpack": "**/node_modules/*-static/**"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32",
            "linux"
          ]
        }
      ]
    }
  }
}
